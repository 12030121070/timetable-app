<h1><%= @organization.title %></h1>

<%= simple_form_for :search, :method => :get do |f| %>
  <%= f.input :q, :label => false, :input_html => { :placeholder => 'Введите номер группы или ФИО преподавателя', :autofocus => true, :value =>  params[:search].present? ? params[:search][:q] : '' } %>
  <%= f.submit 'Искать' %>
<% end %>


<ul>
  <% @groups.each do |group| %>
    <li><%= link_to "#{group.title} (#{group.timetable.title})", organization_group_path(group.title) %></li>
  <% end %>
  <% @lecturers.each do |lecturer| %>
    <li><%= link_to lecturer.full_name, organization_lecturer_path(lecturer) %></li>
  <% end %>

  <% if @groups.empty? && @lecturers.empty? && params[:search].present? %>
      <li class="empty">Не найдено ни одного расписания</li>
  <% end %>
</ul>
