<%= simple_form_for resource, :url => workplace_organization_timetable_lesson_times_path(@timetable.organization, @timetable), :remote => true do |f| %>
  <%= f.input :day, :as => :hidden  %>
  <%= f.input :number, :input_html => { :autofocus => true } %>
  <%= f.input :starts_at %>
  <%= f.input :ends_at %>
  <%= f.submit 'save' %>
  <%= link_to 'cancel', workplace_organization_timetable_lesson_times_path(@timetable.organization, @timetable, 'lesson_time[day]' => f.object.day), :remote => true, :class => 'cancel_link' %>
<% end %>

