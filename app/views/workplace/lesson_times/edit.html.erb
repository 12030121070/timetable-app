<%= simple_form_for resource, :url => workplace_timetable_lesson_time_path(@timetable, resource), :remote => true do |f| %>
  <%= f.input :number, :input_html => { :autofocus => true } %>
  <%= f.input :starts_at %>
  <%= f.input :ends_at %>

  <div class="buttons">
    <%= f.submit 'Сохранить' %>
    <%= link_to 'Отмена', workplace_timetable_lesson_time_path(@timetable, resource), :remote => true, :class => 'cancel_link' %>
  </div>
<% end %>
