<%= simple_nested_form_for [:workplace, @timetable].flatten, :remote => true, :html => { :class => 'scrollable' } do |f| %>
  <%= f.input :title, :input_html => { :class => 'inline_edit large' } %>
  <%= f.input :starts_on, :as => :date_picker, :input_html => { :class => 'inline_edit' } %>
  <%= f.input :ends_on, :as => :date_picker, :input_html => { :class => 'inline_edit' }, :label => false %>
  <%= f.input :parity, :input_html => { :class => 'inline_edit' } %>
  <%= f.input :first_week_parity, :as => :radio_buttons, :input_html => { :class => 'inline_edit' } %>

  <%= f.fields_for :lesson_times do |lt_f| %>
    <%= lt_f.input :starts_at %>
    <%= lt_f.input :ends_at %>
    <%= lt_f.input :day, :as => :hidden %>
    <%= lt_f.input :number, :as => :hidden %>
    <%= lt_f.link_to_remove 'Удалить урок' %>
  <% end %>
  <%= f.link_to_add 'Добавить урок', :lesson_times %>

  <div class="buttons sticky bottom">
    <%= f.submit "Сохранить", :class => 'yellow_button' %>
    <%= link_to "Отмена", :back, :class => 'cancel grey_button' %>
  </div>
<% end %>
