<h1>Memberships</h1>

<%= link_to @organization.title, workplace_organization_path(@organization) %>
<%= link_to 'New membership', new_workplace_organization_membership_path(@organization) %>

<ul>
  <% @memberships.each do |membership| %>
    <li>
      <%= "#{membership.user.email} (#{membership.role_text})" %>
      <%= link_to 'Edit', edit_workplace_organization_membership_path(membership.organization, membership) %>
      <%= link_to 'Delete', workplace_organization_membership_path(membership.organization, membership), :method => :delete, :confirm => 'Are you sure?' %>
    </li>
  <% end %>
</ul>

