<li class='item' data-value='<%= membership.email || membership.user.email %>'>
  <% unless membership.owner? %>
    <div class="actions">
      <%= link_to 'удалить', workplace_membership_path(membership), :method => :delete, :confirm => 'Вы уверены?', :class => 'delete_button faded' %>
    </div>
  <% end %>

  <% if membership.activated? %>
    <%= "#{membership.user.email} (#{membership.role_text})" %>
  <% else %>
    <%= "#{membership.email} (#{membership.role_text}) не подтверждено" %>
  <% end %>
</li>
