<%= simple_form_for [:workplace, @organization, @membership] do |f| %>
  <% if @membership.new_record? %>
    <%= f.input :user_id, :as => :select, :collection => User.all.map { |user| [user.email, user.id] } %>
  <% end %>
  <%= f.input :role %>

  <%= f.submit %>
<% end %>

<%= link_to 'Cancel', workplace_organization_memberships_path(@organization) %>
