<h1><%= resource.title %></h1>

<h3>Your lecturers (<%= link_to "add lecturer", new_workplace_organization_lecturer_path(resource) %>)</h3>
<div class="import_help">
  Description of csv file
  * first line is headers ('surname, name, patronymic')
  * next lines is lecturer info('Ivanov, Ivan, Ivanovich')
</div>
<%= simple_form_for :import, :url => import_workplace_organization_lecturers_path(resource) do |f| %>
  <%= f.input :file, :as => :file %>
  <%= f.submit 'Import' %>
<% end %>
<ul>
  <%= render resource.lecturers if resource.lecturers.any? %>
</ul>

<h3>Your buildings (<%= link_to 'add building', new_workplace_organization_building_path(resource) %>)</h3>
<div class="import_help">
  Description of csv file
  * first line is headers ('address, title, number')
  * next lines is lecturer info('"Vershinina st, 76", FET, 438)
</div>
<%= simple_form_for :import, :url => import_workplace_organization_buildings_path(resource) do |f| %>
  <%= f.input :file, :as => :file %>
  <%= f.submit 'Import' %>
<% end %>
<ul>
  <%= render resource.buildings if resource.buildings.any? %>
</ul>


<h3>Your members (<%= link_to 'add membership', new_workplace_organization_membership_path(resource) %>)</h3>
<ul>
  <%= render resource.memberships if resource.memberships.any? %>
</ul>

<h3>Your lesson times</h3>
<ul>
  <%= render resource.lesson_times %>
</ul>
