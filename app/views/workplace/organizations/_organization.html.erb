<% if @organization.persisted? %>
  <div class="organization_info data_presentation">
    <%= link_to workplace_organization_path do %>
      <span>
        <%= image_tag @organization.logo.image.url(:thumb), :width => 32, :height => 32 if @organization.logo.present? && @organization.logo.persisted? %>
      </span>
      <b><%= @organization.title %></b>
    <% end %>
  </div>
<% end %>
