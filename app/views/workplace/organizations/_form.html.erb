<%= simple_nested_form_for resource, :url => [:workplace, resource.persisted? ? resource : :organizations] do |f| %>
  <%= f.input :title %>
  <%= f.input :email %>
  <%= f.input :phone %>
  <%= f.input :site %>
  <%= f.input :subdomain %>
  Праздники организации:
  <%= f.fields_for :organization_holidays do |ohf| %>
    <%= ohf.input :date %>
    <%= ohf.link_to_remove 'delete' %>
  <% end %>
  <%= f.link_to_add 'add', :organization_holidays %>

  <div class="buttons">
    <%= f.submit "Save" %>
    <%= link_to "Cancel", :back %>
  </div>
<% end %>
