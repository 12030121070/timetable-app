<%= simple_nested_form_for resource, :url => [:workplace, @organization], :remote => true do |f| %>
  <%= f.input :title %>
  <%= f.input :email %>
  <%= f.input :phone %>
  <%= f.input :site %>
  <%= f.input :subdomain %>
  Праздники организации:
  <%= f.fields_for :organization_holidays do |ohf| %>
    <%= ohf.input :date %>
    <%= ohf.link_to_remove 'убрать' %>
  <% end %>
  <%= f.link_to_add 'добавить', :organization_holidays %>

  <div class="buttons">
    <%= f.submit "Сохранить" %>
    <%= link_to "Отмена", :back, :class => 'cancel' %>
  </div>
<% end %>
