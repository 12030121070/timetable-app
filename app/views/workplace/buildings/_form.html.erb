<%= simple_nested_form_for [:workplace, @organization, @building].flatten do |f| %>
  <%= f.input :title %>
  <%= f.input :address %>
  <%= f.simple_fields_for :classrooms do |cf|  %>
    <%= cf.input :number  %>
    <%= cf.link_to_remove 'Remove' %>
  <% end %>
  <%= f.link_to_add "Add classroom", :classrooms %>

  <div class="buttons">
    <%= f.submit "Save" %>
    <%= link_to 'Delete', workplace_organization_building_path(:workplace, @organization, resource), :method => :delete, :confirm => 'Are you sure?' unless resource.new_record? %>
    <%= link_to "Cancel", :back %>
  </div>
<% end %>

