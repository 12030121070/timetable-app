<li class='item' id='lecturer_<%= lecturer.id%>' data-value='<%= lecturer.full_name %>'>
  <div class="actions">
    <%= link_to "статистика", statistic_workplace_lecturer_path(lecturer), :class => 'yellow_button faded' %>
    <%= link_to 'редактировать',
                edit_workplace_lecturer_path(lecturer),
                :class => 'yellow_button faded in_frame',
                'data-parent' => '.workplace_wrapper',
                'data-target' => "#lecturer_#{ lecturer.id }",
                'data-list' => '#lecturer_list',
                'data-kind' => 'update_record',
                :remote => true %>
    <%= link_to 'удалить', workplace_lecturer_path(lecturer), :method => :delete, :confirm => 'Вы уверены?', :class => 'delete_button faded' %>
  </div>

  <%= link_to lecturer.full_name, workplace_lecturer_path(lecturer), :class => 'title in_frame', :remote => true, :data => { :parent => '.workplace_wrapper' } %>
</li>
